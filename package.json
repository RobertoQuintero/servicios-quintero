{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "package.json",
  "scripts": {
    "sass": "node-sass -w ./src/scss/ -o ./public/",
    "pug": "pug -w -P ./src/pug/pages/ -o ./public/",
    "browserify": "browserify ./src/js/index.js -d -o ./public/script.js -t [ babelify --presets [ @babel/env ] ]",
    "watchify": "watchify ./src/js/index.js -d -o ./public/script.js -t [ babelify --presets [ @babel/env ] ] -v",
    "stack": "parallelshell \"npm run sass\" \"npm run pug\" \"npm run watchify\"",
    "serve": "browser-sync start --server --files public --serveStatic public --reload-delay=300 --reload-debounce=500",
    "working": "parallelshell \"npm run stack\" \"npm run serve\"",
    "imagemin": "imagemin \"./src/img/\" --out-dir ./public/img/ -p=pngquant -p=jpeg-recompress",
    "min.html": "pug ./src/pug/pages/ -o ./public/",
    "min.js": "npm run browserify && uglifyjs ./public/script.js -c -o ./public/script.js",
    "uncss": "uncss -u uncss.json \"./public/*.html\" > ./public/styles.un.css",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers \"> 5%, ie 10\" -r ./public/styles.un.css",
    "min.css": "node-sass --output-style compressed ./public/styles.un.css ./public/styles.css",
    "min": "npm run min.html && npm run min.js && npm run uncss && npm run autoprefixer &&  npm run min.css && rimraf ./public/styles.un.css",
    "build": "npm run min && npm run serve",
    "start": "npm run working"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "autoprefixer": "^9.5.1",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.5",
    "browserify": "^16.2.3",
    "imagemin-cli": "^4.0.1",
    "imagemin-jpeg-recompress": "^6.0.0",
    "imagemin-pngquant": "^7.0.0",
    "node-sass": "^4.12.0",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^6.1.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.3",
    "uglify-js": "^3.5.15",
    "uncss": "^0.16.2",
    "watchify": "^3.11.1"
  }
}
